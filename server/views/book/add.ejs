<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<!--Content for the add page-->

<div class="container">
    <div class="row">
        <div class="offset-md3 col-md-6">
        <h1><%title%></h1>

        <form  class="form" method="POST">
            <div class="form-group">
                <label for="nameTextField">Book <i class="baseline-time_to_leave"></i></label>
                <input type="text" class="form control"
                id="nameTextField"
                placeholder="Enter the Book Titile"
                name="name" required>
            </div>

            <div class="form-group">
                <label for="authorTextField">Author</label>
                <input type="text" class="form control"
                id="authorTextField"
                placeholder="Enter the Book's author'"
                name="author" required>
            </div>

            <div class="form-group">
                <label for="publishedTextField">Year</label>
                <input type="text" class="form control"
                id="publishedTextField"
                placeholder="Enter the Year of publication"
                name="published" required>
            </div>

            <div class="form-group">
                <label for="descriptionTextArea">Description</label>
                <textarea type="text" class="form control"
                id="descriptionTextField"
                placeholder="Enter a breif description of the book"
                name="description" required></textarea>
            </div>

            <div class="form-group">
                <label for="priceTextField">price</label>
                <input type="number" class="form control"
                id="priceTextField"
                placeholder="Enter the Book's price"
                name="price" required>
            </div>
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i>Submit
            </button>
            <a href="/book-list" class="btn btn-warning">
                <i class="fas fa-undo"></i>Cancel</a>
        </form>
    </div>
    </div>
</div>








